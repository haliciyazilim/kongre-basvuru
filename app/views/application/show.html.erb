          </div>
          <!-- COL 12-->
          <div class="col-xs-12">
            <div class="form-group">
              <label for="sunumKapsam">Çalışmanızın Kapsamı : </label>
              <textarea rows="15" type="text" class="form-control" id="sunumKapsam" placeholder="2500 Karakter uzunluğunda olmalı - Boşluklu" maxlength="2500"></textarea>
            </div>
          </div>
          <!-- COL 12-->
          <div class="col-xs-12">
            <div class="form-group">
              <label for="sunumHedef">Çalışmanızın Hedef Kitlesi : </label>
              <textarea rows="4" type="text" class="form-control" id="sunumHedef" placeholder="350 Karakter uzunluğunda olmalı - Boşluklu" maxlength="350"></textarea>
            </div>
          </div>
          <!-- COL 12-->
        </div>
      </div>
      <div ng-if="applicant_type == presenter" class="panel-footer">
        <div class="row">
          <div class="col-xs-12 col-sm-10 text-right">
            <div class="checkbox">
              <label>
                <input type="checkbox"> Kabul Ediyorum
              </label>
            </div>
          </div>
          <div class="col-xs-12 col-sm-2">
            <button class="btn btn-danger pull-right">GÖNDER</button>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

